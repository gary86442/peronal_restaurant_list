<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styleesheets/style.css" />
    <title>Restaurant List</title>
  </head>
  <body>
    <header>
      <!-- navigation -->
      <nav class="navbar navbar-light bg-light">
        <div class="container text-center">
          <div class="row" style="width: 100%;">
            <a class="navbar-brand col-7 text-start" href="/">
              <img
                src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
                width="30"
                height="30"
                class="d-inline-block align-top"
                alt="我的餐廳清單"
              />
              {{#if userName}}{{userName}}{{else}}我{{/if}}的餐廳清單
            </a>
            {{#if isAuthenticated}}
              <div class="btn col-2">
                <a
                  href="/restaurants/create"
                  class="btn"
                  style="color:white"
                  id="create"
                >新增餐廳</a>
              </div>
              <div class="btn col-2" id="logout">
                <a
                  href="/users/logout"
                  class="btn btn-dark"
                  {{! style="color:white" }}
                >登出</a>
              </div>
            {{/if}}
          </div>
        </div>

      </nav>

      <div class="banner"></div>
    </header>
    {{{body}}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/4aec0baeee.js"
      crossorigin="anonymous"
    ></script>
    <script src="\javascript\deleModal.js"></script>
  </body>
</html>